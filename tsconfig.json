{
    "compilerOptions": {
      "target": "es2015",
      "lib": ["es2015", "es2017", "dom"],
      "module": "es2015",
      "sourceMap": true,
      "outDir": "./bin/.ts",
      "rootDir": "./",
      "strict": true,
      "noImplicitAny": false,
      "downlevelIteration": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      // "incremental": true,
      "types": [
        "./@types/globals",
        "./@types/editor-extends",
        "./@types/ammo.js",
        "./@types/wx",
        "./cocos/core/gfx/webgl/WebGL",
        "./cocos/core/gfx/webgl2/WebGL2",
        "./node_modules/tween.js/TWEEN",
        "./node_modules/@types/jest/index"
      ]
    },
    "files": [
        "./index.ts"
    ]
  }
